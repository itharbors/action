{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    /* Modules */
    "module": "commonjs",
    "rootDir": "./source",
    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
